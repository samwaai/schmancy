{
	"compilerOptions": {
		"target": "ES2021",
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"module": "ESNext",
		"lib": ["ES2021", "ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"noEmit": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "types",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		/* Linting */
		"strict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@schmancy/*": ["../src/*"],
			"@mixins/*": ["../mixins/*"]
		},
		"plugins": [
			{
				"name": "typescript-lit-html-plugin"
			},
			{
				"name": "ts-lit-plugin",
				"strict": true,
				"rules": {
					"no-unknown-tag-name": "error",
					"no-unknown-event": "warning",
					"no-unknown-attribute": "warning",
					"no-invalid-attribute": "warning",
					"no-invalid-event": "warning",
					"no-invalid-property": "warning",
					"no-invalid-attribute-value": "warning",
					"no-missing-import": "off",
					"no-unknown-slot": "off"
				}
			}
		]
	},
	"include": ["src/**/*.ts", "typings/**/*.d.ts", "src/**/*.ts", "src/theme.ts"]
}
