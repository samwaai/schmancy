{
	"name": "schmancy-workspace",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"packages/*",
		"demo"
	],
	"description": "UI library build with web components",
	"main": "./dist/index.js",
	"exports": {
		".": {
			"types": "./types/src/index.d.ts",
			"default": "./dist/index.js"
		},
		"./mixins": {
			"types": "./types/mixins/index.d.ts",
			"default": "./dist/mixins/index.js"
		},
		"./mixins/*": {
			"types": "./types/mixins/*.d.ts",
			"default": "./dist/mixins/*.js"
		},
		"./ai/*": "./ai/*",
		"./*": {
			"types": "./types/src/*/index.d.ts",
			"default": "./dist/*.js"
		}
	},
	"packageManager": "yarn@4.9.2",
	"scripts": {
		"dev": "concurrently \"cd packages/schmancy && yarn dev\" \"cd demo && yarn dev\" --names \"lib,demo\" --prefix-colors \"blue,green\"",
		"build": "cd packages/schmancy && yarn build",
		"build:demo": "cd demo && yarn build",
		"preview": "cd demo && yarn preview",
		"publish:lib": "cd packages/schmancy && npm publish"
	},
	"devDependencies": {
		"concurrently": "^9.2.1"
	}
}
